{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "package-test",
        "dist"
    ]
}
